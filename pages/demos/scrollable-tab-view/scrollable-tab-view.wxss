/* 导航tabs */
.navbar {
  width: 100%;
  height: 74rpx; /* 导航高度 */
  white-space: nowrap; /* important: scroll-view scroll-x */
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  position: relative;
}
.navbar__item {
  display: inline-block; /* important: scroll-view scroll-x item */
  width: 108rpx;
  text-align: center;
  padding: 10rpx;
  color: #353535;
  box-sizing: border-box;
}
.navbar__item-title {
  font-size: 28rpx;
}
.navbar__item-active {
  color: #4374e4;
}
.navbar__slider {
  width: 108rpx;  /* tab指示条宽度 */
  height: 6rpx;
  background-color: #4374e4;
  position: absolute;
  top: 68rpx; /* 指示条位置 */
  left: 0;
}

/* animation */
.withAnimate {
  transition: all 100ms ease;
  -webkit-transform: translate3d(0, 0, 0);
  -moz-transform: translate3d(0, 0, 0);
  -ms-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
  -webkit-backface-visibility: hidden;
  -moz-backface-visibility: hidden;
  -ms-backface-visibility: hidden;
  backface-visibility: hidden;
  -webkit-perspective: 1000;
  -moz-perspective: 1000;
  -ms-perspective: 1000;
  perspective: 1000;
}

.content {
  text-align: center;
  line-height: 200rpx;
}
